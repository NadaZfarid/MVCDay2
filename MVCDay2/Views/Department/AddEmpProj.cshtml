@{
    Layout = "_Layout";
}
<html>
    <head>
        <title>Add Employee</title>
    </head>
    <body>
    <form asp-action="Add" asp-controller="Department"  method="post">
        <label> Projects</label>
 
        <select class="form-control" name="Pnum" multiple>
            @foreach (var project in Model.projects)
            {
                <option value="@project.Number">@project.Name</option>
            }
        </select>

        <label> Employee</label>
        <select name="Emp_SSN" class="form-control">
        @foreach(var emp in ViewBag.Employees){
        
            <option value="@emp.SSN">@emp.Fname @emp.LName</option>
        }
        </select>

        <input type="submit" value="Add" class="form-control-sm btn btn-primary" />
    </form>
    </body>
</html>