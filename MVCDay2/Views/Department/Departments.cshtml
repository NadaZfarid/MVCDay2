@{
    Layout = "_Layout";
}
<h1> Departments : </h1>

@foreach (var department in Model)
{
    <ul>
        <li>Name: @department.Name</li>
        <li>Manager Name: @department.manager</li>
        <li>Start Date: @department.StartDate</li>
        <li>@Html.ActionLink("Edit","Edit","Department",new {id=department.Number})</li>
        <li>@Html.ActionLink("Delete","Delete","Department",new {id=department.Number}) </li>
    </ul>
    <hr />
}


@Html.ActionLink("Add","Add","Department")