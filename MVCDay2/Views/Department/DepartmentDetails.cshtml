@{
    Layout = "_Layout";
}
<html>
<head>
    <title>Profile</title>
</head>
<body>
    <ul>
        <li>Department Name : @Model.Name</li>
        <li>Manager : @Model.ManagerName</li>
        <li>Start Date : @Model.StartDate</li>
        <li>Employees :</li>
        @foreach(var item in ViewBag.Employees)
        {
                  <ul>
                      <li>Name : @item.Fname @item.LName</li>
                  </ul>
                  
        }
        <li>Projects :</li>
        @foreach (var item in Model.projects)
        {
            <ul>
                <li>Name : @item.Name</li>
            </ul>

        }

        <button class="btn btn-primary"><a asp-action="AddEmpProj" asp-controller="Department" asp-route-id="@Model.Number" class="btn btn-primary">Add Employee to Projects</a></button>
        <button class="btn btn-primary"><a asp-action="Hours" asp-controller="WorkFor" asp-route-id="@Model.Number" class="btn btn-primary">Employee Hours</a></button>

</body>
</html>
 